{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div id="col" class="col">
        <div class="jumbotron bg-light centered shadow-lg text-center">
            <div class="smiley-reponce">
                <img src="{{asset('image/smileyREPONCE.png')}}" alt="PointRÃ©ponse" style="width: 85px; height: auto;">
            </div>

            <h5 class="orange-text">Changement de mot de passe</h5>

            <hr />

            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'form-styled-stand-alone' } }) }}
            <div class="row">
                <div class="col">
                    <div class="error-txt">
                        {{ form.current_password.vars.errors }}
                    </div>
                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><span class="material-icons">lock_open</span></div>
                        </div>
                        {{ form_widget(form.current_password, {'attr': {'placeholder': 'mot de passe actuel', 'class':'form-control'}}) }}
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="error-txt">
                        {{ form.plainPassword.first.vars.errors }}
                    </div>
                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><span class="material-icons">lock</span></div>
                        </div>
                        {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'nouveau mot de passe', 'class':'form-control'}}) }}
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="error-txt">

                    </div>
                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><span class="material-icons">lock</span></div>
                        </div>
                        {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'nouveau mot de passe', 'class':'form-control'}}) }}
                    </div>
                </div>
            </div>

            {{ form_widget(form) }}
            <div>
                <input class="btn btn-orange-filled rounded-pill text-uppercase px-5" type="submit" value="{{ 'change_password.submit'|trans }}" />
            </div>
            {{ form_end(form) }}


        </div>
    </div>
</div>